<%- | Integer $period, Integer $tickle, Array[String] $interfaces = [], Array[String] $pings = [] | -%>
watchdog-device		= /dev/watchdog
watchdog-timeout	= <%= $period %>
interval		= <%= $tickle %>
realtime		= yes
priority		= 1
<% $interfaces.each |$iface| { -%>
interface = <%= $iface %>
<% } -%>
<% $pings.each |$addr| { -%>
ping = <%= $addr %>
<% } -%>